<%- include("../includes/header.ejs", {title: "Update " + businesses.name}); %>

<h1>Update <%= businesses.name%></h1>
<a href="/">Home</a> <br /><br />
<form action="/businesses/update" method="get">
    <input type="hidden" id="business_id" name="business_id" value="<%= businesses.business_id %>">
    Business Name: <input id="name" name="name" type="text" /> <br /><br />
    Category: <input id="category" name="category" type="text" />
    <br />
    <br />
    Address:
        <select id="address_id" name="address_id" multiple="multiple">
            <% for(var i=0; address_log.length > i; i++ ) {
                var selected = "";
                if(address_log[i].address_id != null) {
                    selected = "selected";
                }
            %>
            <option value="<%= address_log[i].address_id %>"  >
                <%= address_log[i].street + ', ' + address_log[i].city + ', ' + address_log[i].state + ' ' + address_log[i].zip %></option>
            <% } %>
    </select>

    <!-- Initialize the multiselect plugin: -->
    <script type="text/javascript">
        $(document).ready(function() {
            $('#address_id').multiselect();
        });
    </script>

    <br /><br />

    <input type="submit" />

</form>

<%- include("../includes/footer.ejs"); %>

