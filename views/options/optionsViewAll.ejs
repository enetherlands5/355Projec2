<%- include("../includes/header.ejs", {title:"Options - View All"}); %>
<h1>Options</h1>
<a href="/">Home</a> <br /><br />
<a href="/options/add">Add New Option</a> <br />

<br />

<table border="1">
    <tr><th>Name</th><th>Location</th><th>Number of Days</th><th>Cost</th><th>Action</th></tr>
    <% for(var i=0; result.length > i; i++ ) { %>
    <tr>
        <td align="center"><a href="/options/?option_id=<%= result[i].option_id %>"><%= result[i].name %></a></td>
        <td align="center"><%= result[i].location %></td>
        <td align="center"><%= result[i].num_days %></td>
        <td align="center"><%= result[i].cost %></td>
        <td>
            <button onclick="event.preventDefault();window.location.href='/options/edit/?option_id=<%= result[i].option_id %>'">Edit</button>
            <form action="/options/delete/" style="display:inline;">
                <input type="hidden" name="option_id" id="option_id" value="<%= result[i].option_id %>" />
                <input type="submit" value="Delete"/>
            </form>
        </td>
    </tr>
    <% } %>
</table>
<%- include("../includes/footer.ejs"); %>