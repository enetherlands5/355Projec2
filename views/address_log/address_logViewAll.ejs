<%- include("../includes/header.ejs", {title:"Addresses - View All"}); %>
<h1>Addresses</h1>
<a href="/">Home</a> <br /><br />
<a href="/address_log/add">Add New Address</a> <br />

<br />

<table border="1">
    <tr><th>Address</th><th>Action</th></tr>
    <% for(var i=0; result.length > i; i++ ) { %>
    <tr>
        <td><a href="/address_log/?address_id=<%= result[i].address_id %>">
        <%= result[i].street %>
        <%= result[i].city %>,
        <%= result[i].state %>
        <%= result[i].zip %></a></td>
        <td>
            <button onclick="event.preventDefault();window.location.href='/address_log/edit/?address_id=<%= result[i].address_id %>'">Edit</button>
            <form action="/address_log/delete/" style="display:inline;">
                <input type="hidden" name="address_id" id="address_id" value="<%= result[i].address_id %>" />
                <input type="submit" value="Delete"/>
            </form>
        </td>
    </tr>
    <% } %>
</table>
<%- include("../includes/footer.ejs"); %>