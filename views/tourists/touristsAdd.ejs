<%- include("../includes/header.ejs", {title:"Add New Director"}); %>

<h1>Add New Director</h1>
<a href="/">Home</a> <br />
<br />
<form action="/directors/insert" method="get">
    First Name: <input id="fname" name="fname" type="text" /> &nbsp &nbsp
    Last Name: <input id="lname" name="lname" type="text" /> <br /><br />
    Email: <input id="email" name="email" type="text" /> <br /><br />
    Phone: <input id="phone" name="phone" type="text" /> <br /><br />
    SSN: <input id="ssn" name="ssn" type="text" /> <br /><br />
    Address:
    <select id="address_id" name="address_id" multiple="multiple">
        <% for(var i=0; address_log.length > i; i++ ) {
            var selected = "";
            if(address_log[i].address_id != null) {
                selected = "selected";
            }
        %>
        <option value="<%= address_log[i].address_id %>"  >
            <%= address_log[i].street + ', ' + address_log[i].city + ', ' + address_log[i].state + ' ' + address_log[i].zip %></option>
        <% } %>
    </select>

    <!-- Initialize the multiselect plugin: -->
    <script type="text/javascript">
        $(document).ready(function() {
            $('#address_id').multiselect();
        });
    </script>
    <br /><br /><br />

    Payment Info:<br /><br />
    Credit Card Number: <input id="card_number" name="card_number" type="text" /> <br /><br />
    Expiration Date (MM/YYY): <input id="expiration_date" name="expiration_date" type="text" /> <br /><br />
    CVC Code: <input id="cvc_code" name="cvc_code" type="cvc_code" /> <br /><br />
    <br /><br />

    Option: <input id="name" name="name" type="text" /> <br /><br />

    <br /> <br />
    <input type="submit" />


</form>
<%- include("../includes/footer.ejs"); %>