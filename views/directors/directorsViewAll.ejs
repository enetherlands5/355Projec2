<%- include("../includes/header.ejs", {title:"Directors - View All"}); %>

<h1>Directors</h1>
<a href="/">Home</a> <br /><br />
<a href="/directors/add">Add New Director</a>
<br />
<br />
<table border="1">
    <tr><th>Name</th><th>Email</th><th>Phone Number</th><th>Address</th><th>SSN</th><th>Option</th><th>Action</th>
    </tr>
    <% for(var i=0; result.length > i; i++ ) { %>
    <tr>
        <td align="center"><a href="/directors/?director_id=<%= result[i].director_id %>"><%= result[i].fname %> <%= result[i].lname %></a></td>
        <td align="center"><%= result[i].email %></td>
        <td align="center"><%= result[i].phone %></td>
        <td align="center"><%= result[i].street %>, <%= result[i].city %>, <%= result[i].state %> <%= result[i].zip %></td>
        <td align="center"><%= result[i].ssn %></td>
        <td align="center"><%= result[i].name %></td>
        <td>
            <button onclick="event.preventDefault();window.location.href='/directors/edit2/?director_id=<%= result[i].director_id %>'">Edit</button>
            <form action="/directors/delete/" style="display:inline;">
                <input type="hidden" name="director_id" id="director_id" value="<%= result[i].director_id %>" />
                <input type="submit" value="Delete"/>
            </form>
        </td>
    </tr>
    <% } %>
</table>
<%- include("../includes/footer.ejs"); %>